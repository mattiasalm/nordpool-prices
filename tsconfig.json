{
  "compilerOptions": {
    "allowJs": false,
    "allowUnreachableCode": false,
    "target": "es6",
    "module": "esnext",
    "lib": ["es2021"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "removeComments": true,
    "outDir": "lib/esm",
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
